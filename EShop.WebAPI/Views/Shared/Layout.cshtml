@using EShop.Domain.Model
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>EShop | @ViewBag.Title</title>
</head>

<body>
<h2>@ViewBag.Title</h2>
<div>
    @if (ViewBag.User is AuthenticatedUser)
    {
        <label>@ViewBag.User.Name</label>
        <a asp-controller="Account" asp-action="SignOut">Sign out</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="SignIn">Sign in</a>
    }
</div>
<div>
    @RenderBody()
</div>
</body>
</html>